<div class="row">
  <div class="panel panel-primary">
    <div class="panel-heading">
      <h3 class="panel-title">
      <%= t(:material).pluralize %>
      </h3>
    </div>
    <div class="panel-body">
      <table class="table table-striped">
        <thead>
          <tr>
            <th><%= t(:measurement) %></th>
            <th><%= t(:code) %></th>
            <th><%= t(:name) %></th>
            <th><%= t(:note) %></th>
            <th><%= t(:minimal) %></th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <%- @materials.each do |material| %>
          <tr>
            <td><%= material.measurement %></td>
            <td><%= material.code %></td>
            <td><%= material.name %></td>
            <td><%= material.note %></td>
            <td><%= material.minimal %></td>
            <td><%= link_to t(:edit), edit_material_path(material) %></td>
            <td><%= link_to t(:delete), material, method: :delete, data: { confirm: t(:delete_confirm) } %></td>
          </tr>
          <%- end %>
        </tbody>
      </table>
      <div class="row">
        <div class="col-md-12 text-right">
          <%= link_to t(:new_material), new_material_path, class: "btn btn-primary" %>
        </div>
      </div>
    </div>
  </div>
</div>
