<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">
      <%= t(:patient).pluralize %>
    </h3>
  </div>
  <div class="panel-body">

  <% if notice != nil %>
  <div class="alert alert-success alert-dismissible">
    <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
    <%= content_tag(:p, notice, class: 'notice') if notice.present? %>
  </div>
<% end %>

  <table class="table table-striped">
    <thead>
      <tr>
        <th><%= t(:patient) %></th>
        <th><%= t(:birth) %></th>
        <th><%= t(:nationality) %></th>
        <th><%= t(:marital_status_id) %></th>
        <th><%= t(:indication_patient_id) %></th>
        <th><%= t(:health_plan_id) %></th>
        <th><%= t(:email) %></th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% marital_status = ["Solteiro", "Casado", "Separado", "ViÃºvo", "Outros"] %>
      <% @patients.each do |patient| %>
        <tr>
          <td><%= patient.patient %></td>
          <td><%= date_format(patient.birth) %></td>
          <td><%= patient.nationality %></td>
          <td><%= marital_status[patient.marital_status_id] %></td>
          <td><%= patient.indication_patient_id %></td>
          <td><%= patient.health_plan.name %></td>
          <td><%= patient.email %></td>
          <td><%= link_to t(:edit), edit_patient_path(patient) %></td>
          <td><%= link_to t(:delete), patient, method: :delete, data: { confirm: t(:delete_confirm) } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div class="row">
    <div class="col-md-12 text-right">
      <%= link_to t(:new_patient), new_patient_path, class: "btn btn-default" %>
    </div>
  </div>  

</div>