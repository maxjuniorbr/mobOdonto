<p id="notice"><%= notice %></p>

<h1>Listing Patients</h1>

<table>
  <thead>
    <tr>
      <th>Patient</th>
      <th>Birth</th>
      <th>Nationality</th>
      <th>Marital status</th>
      <th>Indication patient</th>
      <th>Health plan</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @patients.each do |patient| %>
      <tr>
        <td><%= patient.patient %></td>
        <td><%= patient.birth %></td>
        <td><%= patient.nationality %></td>
        <td><%= patient.marital_status_id %></td>
        <td><%= patient.indication_patient %></td>
        <td><%= patient.health_plan %></td>
        <td><%= patient.email %></td>
        <td><%= link_to 'Show', patient %></td>
        <td><%= link_to 'Edit', edit_patient_path(patient) %></td>
        <td><%= link_to 'Destroy', patient, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

