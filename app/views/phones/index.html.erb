<p id="notice"><%= notice %></p>

<h1>Listing Phones</h1>

<table>
  <thead>
    <tr>
      <th>Patient</th>
      <th>Landline phone</th>
      <th>Cell phone</th>
      <th>Business phone</th>
      <th>Other phone</th>
      <th>Other phone contact</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @phones.each do |phone| %>
      <tr>
        <td><%= phone.patient %></td>
        <td><%= phone.landline_phone %></td>
        <td><%= phone.cell_phone %></td>
        <td><%= phone.business_phone %></td>
        <td><%= phone.other_phone %></td>
        <td><%= phone.other_phone_contact %></td>
        <td><%= link_to 'Show', phone %></td>
        <td><%= link_to 'Edit', edit_phone_path(phone) %></td>
        <td><%= link_to 'Destroy', phone, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

