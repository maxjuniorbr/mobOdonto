<div class="modal fade" id="phone-modal" role="dialog" data-backdrop="static" data-keyboard="false">
  <%= form_for(@phone, remote: true, html: { class: 'form-horizontal' }) do |f| %>
  <div class="modal-dialog">
    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title"><%= t(:phone) %></h4>
      </div>
      <div class="modal-body">
        <div class="form-group hide">
          <div class="col-md-12">
            <div class="input-group">
              <%= hidden_field_tag :origin, params[:origin], class: "form-control" %>
            </div>
          </div>
        </div>
        <div class="form-group hide">
          <div class="col-md-12">
            <div class="input-group">
              <%= f.hidden_field :patient_id, value: params[:patient_id].blank? ? @phone.patient_id : params[:patient_id], class: "form-control" %>
            </div>
          </div>
        </div>
        <div class="form-group">
          <div class="col-md-12">
            <div class="input-group">
              <span class="input-group-addon" id="basic-addon5"><%= t(:landline_phone) %></span>
              <%= f.text_field :landline_phone, class: "form-control", alt: :phone %>
            </div>
          </div>
        </div>
        <div class="form-group">
          <div class="col-md-12">
            <div class="input-group">
              <span class="input-group-addon" id="basic-addon5"><%= t(:cell_phone) %></span>
              <%= f.text_field :cell_phone, class: "form-control", alt: "cell-phone" %>
            </div>
          </div>
        </div>
        <div class="form-group">
          <div class="col-md-12">
            <div class="input-group">
              <span class="input-group-addon" id="basic-addon5"><%= t(:business_phone) %></span>
              <%= f.text_field :business_phone, class: "form-control", alt: :phone %>
            </div>
          </div>
        </div>
        <div class="form-group">
          <div class="col-md-12">
            <div class="input-group">
              <span class="input-group-addon" id="basic-addon5"><%= t(:other_phone) %></span>
              <%= f.text_field :other_phone, class: "form-control", alt: :phone %>
            </div>
          </div>
        </div>
        <div class="form-group">
          <div class="col-md-12">
            <div class="input-group">
              <span class="input-group-addon" id="basic-addon5"><%= t(:other_phone_contact) %></span>
              <%= f.text_field :other_phone_contact, class: "form-control" %>
            </div>
          </div>
        </div>
        <div class="modal-footer">
          <%= f.submit class: "btn btn-success" %>
          <%= link_to t(:cancel), "#", { class: "btn btn-default", "data-dismiss": "modal" } %>
        </div>
      </div>
    </div>
  </div>
  <%- end %>
</div>