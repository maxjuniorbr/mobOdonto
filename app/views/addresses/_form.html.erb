<%= form_for(@address, html: { class: 'form-horizontal' }) do |f| %>
  <div class="form-group">
    <div class="col-sm-12">
      <div class="input-group">
        <span class="input-group-addon" id="basic-addon5"><%= t(:patient_id) %></span>
        <%= f.text_field :patient_id, class: "form-control" %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-12">
      <div class="input-group">
        <span class="input-group-addon" id="basic-addon5"><%= t(:street) %></span>
        <%= f.text_field :street, class: "form-control" %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-12">
      <div class="input-group">
        <span class="input-group-addon" id="basic-addon5"><%= t(:street_number) %></span>
        <%= f.text_field :street_number, class: "form-control" %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-12">
      <div class="input-group">
        <span class="input-group-addon" id="basic-addon5"><%= t(:complement) %></span>
        <%= f.text_field :complement, class: "form-control" %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-12">
      <div class="input-group">
        <span class="input-group-addon" id="basic-addon5"><%= t(:neighborhood) %></span>
        <%= f.text_field :neighborhood, class: "form-control" %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-12">
      <div class="input-group">
        <span class="input-group-addon" id="basic-addon5"><%= t(:zip) %></span>
        <%= f.text_field :zip, class: "form-control" %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-12">
      <div class="input-group">
        <span class="input-group-addon" id="basic-addon5"><%= t(:city_id) %></span>
        <%= f.text_field :city_id, class: "form-control" %>
      </div>
    </div>
  </div>

  <div class="actions">
    <%= f.submit %>
    <%= link_to "Salvar", "#", id: "salvar", class: "btn btn-primary" %>
  </div>
<% end %>